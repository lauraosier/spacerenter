<ul>
  <% if ::Refinery::Spaces::Admin::SpacesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.spaces_admin_spaces_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_spaces_admin_space_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Spaces::Admin::SpacesController.sortable? && ::Refinery::Spaces::Space.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Spaces"),
                 refinery.spaces_admin_spaces_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Spaces"),
                 refinery.spaces_admin_spaces_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
