<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(space) -%>">
  <span class='title'>
    <%= space.owner %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.spaces_space_path(space),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_spaces_admin_space_path(space),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.spaces_admin_space_path(space),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => space.owner),
        :method => :delete %>
  </span>
</li>
