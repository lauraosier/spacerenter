<% content_for :body_content_title do %>
  <%= @space.owner %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Owner</h1>
    <p>
      <%=raw @space.owner %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @space.address %>
    </p>
  </section>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @space.name %>
    </p>
  </section>
  <section>
    <h1>Phone</h1>
    <p>
      <%=raw @space.phone %>
    </p>
  </section>
  <section>
    <h1>Hours</h1>
    <p>
      <%=raw @space.hours %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @space.email %>
    </p>
  </section>
  <section>
    <h1>Desription</h1>
    <p>
      <%=raw @space.desription %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @space.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="spaces">
      <% @spaces.each do |space| %>
        <li>
          <%= link_to space.owner, refinery.spaces_space_path(space) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
