<ul>
  <% if ::Refinery::Renters::Admin::RentersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.renters_admin_renters_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_renters_admin_renter_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Renters::Admin::RentersController.sortable? && ::Refinery::Renters::Renter.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Renters"),
                 refinery.renters_admin_renters_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Renters"),
                 refinery.renters_admin_renters_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
