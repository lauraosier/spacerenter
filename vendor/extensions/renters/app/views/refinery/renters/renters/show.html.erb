<% content_for :body_content_title do %>
  <%= @renter.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @renter.name %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @renter.email %>
    </p>
  </section>
  <section>
    <h1>Phone</h1>
    <p>
      <%=raw @renter.phone %>
    </p>
  </section>
  <section>
    <h1>Bio</h1>
    <p>
      <%=raw @renter.bio %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @renter.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="renters">
      <% @renters.each do |renter| %>
        <li>
          <%= link_to renter.name, refinery.renters_renter_path(renter) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
